<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', {title: 'Registrarse'}) %>
</head>
<body>
    <%- include('partials/headerNavbar') %>

    <form action="/user/register" method="post" class="form_register">
        <label for="name">Nombre:</label>
        <input type="text" name="name" id="name" value="<%= locals.old && old.name %>">
        <% if (locals.errors && errors.name) { %>
            <p style="color: red;"><%= errors.name.msg %></p>
           <% } %>
        <label for="last_name">Apellido:</label>
        <input type="text" name="last_name" id="name" value="<%= locals.old && old.last_name %>">
        <% if (locals.errors && errors.last_name) { %>
            <p style="color: red;"><%= errors.last_name.msg %></p>
           <% } %>
        <label for="email">Correo electrónico:</label>
        <input type="email" name="email" id="email" value="<%= locals.old && old.email %>">
        <% if (locals.errors && errors.email) { %>
         <p  style="color: red;"><%= errors.email.msg %></p>
        <% } %>
        <label for="password">Contraseña:</label>
        <input type="password" name="password" id="password" value="<%= locals.old && old.password %>">
        <% if (locals.errors && errors.password) { %>
            <p style="color: red;"><%= errors.password.msg %></p>
           <% } %>
        <button class="button_register" type="submit">Registrarse</button>
    </form>

 <%- include('partials/footer') %>
</body>
</html>